<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>


    <style name="Theme.Chronus.ActionBar" parent="Theme.MaterialComponents.Light.DarkActionBar">

        <!-- Main theme colors -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- One can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <!-- App behaviour -->
        <item name="android:fadeScrollbars">true</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Theme.Chronus.ActionBar.Dark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">

        <!-- Main theme colors -->
        <item name="colorPrimary">@color/colorPrimary2</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="android:colorForeground">@color/colorPrimary2</item>
        <!-- One can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <!-- App behaviour -->
        <item name="android:fadeScrollbars">true</item>
        <item name="alertDialogTheme">@style/AlertDialogThemeDark</item>
    </style>

    <style name="AlertDialogTheme" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AlertDialogThemeDark" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="Activity.Transparent.Base" parent="Theme.MaterialComponents.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#fff</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorAccent">@color/colorAccentLight</item>
        <item name="alertDialogTheme">@style/DialogActivity</item>
    </style>

    <style name="Activity.Transparent" parent="Activity.Transparent.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="Activity.Transparent.Light.Base" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:colorForeground">#000</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="alertDialogTheme">@style/DialogActivity.Light</item>
    </style>

    <style name="Activity.Transparent.Light" parent="Activity.Transparent.Light.Base">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="DialogActivity" parent="Theme.MaterialComponents.Dialog.Alert">
        <item name="dialogBackground">@drawable/dialog_full_holo_dark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccentLight</item>
    </style>

    <style name="DialogActivity.Light" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="dialogBackground">@drawable/dialog_full_holo_light</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
</resources>
